<% breadcrumb :inspection_schedule_edit %>
<h1><%= t('views.inspection_schedule.correct_targetyearmonth') %></h1>

<%= form_for(@inspection_schedule) do |f| %>
  <% if @inspection_schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inspection_schedule.errors.count, "error") %> prohibited this inspection_schedule from being saved:</h2>

      <ul>
        <% @inspection_schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :schedule_status_id, value: @inspection_schedule.schedule_status_id %>

  <%= show_system_model(@inspection_schedule.equipment) %>
  <%= show_serial_number(@inspection_schedule.equipment) %>
  <%= show_place(@inspection_schedule.equipment) %>

  <%= datetimepicker_wrapper do %>
    <%= f.label :target_yearmonth %><br>
    <%= month_field(f, :target_yearmonth) %>
  <% end %>

  <div class="field">
    <%= f.label :service_id %><br>
    <%= render_service_select(f) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @inspection_schedule %> |
